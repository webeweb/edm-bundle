{# Resources/views/Document/new.html.twig #}
{% form_theme form "bootstrap_3_layout.html.twig" %}
{% extends "@EDM/layout.html.twig" %}
{% block edmContent %}
    <div class="row clearfix">
        <div class="{{ bootstrapGrid({"lg": 12, "md": 12, "sm": 12, "xs": 12}) }}">
            <div class="panel panel-primary">
                {{ form_start(form) }}
                <div class="panel-heading">
                    <h3 class="panel-title">{{ ("DocumentController." ~ (document.id is null ? "new" : "edit") ~ "Action.title." ~ (document.isDirectory() ? "directory" : "document"))|trans({"%name%": edmPath(location)}, "EDMBundle") }}</h3>
                </div>
                <div class="panel-body">
                    <div class="row clearfix">
                        <div class="{{ bootstrapGrid({"lg": 4, "md": 4, "sm": 12, "xs": 12}) }}">
                            {% include "@EDM/Document/new_content.html.twig" %}
                        </div>
                    </div>
                </div>
                <div class="panel-body pull-right">
                    {{ bootstrapButtonDefault({"icon": "remove", "content": "label.cancel"|trans({}, "EDMBundle")})|bootstrapButtonLink(path("edm_directory_open", {"id": document.parent.id|default(null)})) }}
                    {{ bootstrapButtonPrimary({"icon": "ok", "content": "label.submit"|trans({}, "EDMBundle")})|bootstrapButtonSubmit }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

